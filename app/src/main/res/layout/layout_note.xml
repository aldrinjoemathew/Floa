<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/note_view"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1dffffff"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_note_2"/>
            <EditText
                android:id="@+id/et_content"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:lines="8"
                android:gravity="start|top"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:visibility="gone"
                android:focusableInTouchMode="true"
                android:layout_below="@id/iv_show"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/iv_close_note"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_delete"
                android:layout_above="@id/et_content"
                android:layout_alignRight="@id/et_content"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_minimize"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_remove_black_24dp"
                android:layout_toLeftOf="@id/iv_close_note"
                android:visibility="gone"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>